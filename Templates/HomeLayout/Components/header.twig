<header class="row Header">
		<div class="Header-logo col-lg-2">
			<img src="/SIA/juridico/public/images/Logotipo.png">
		</div>

		<div class="Header-cuenta col-lg-2">
			<p>
				<i class="fas fa-archive"></i>
				{{session.sCuentaActual}}
			</p>
		</div>

		<div class="Header-modulo col-lg-3">
			<h2>
				 <i class="fas fa-desktop"></i>
				 {{js}}
			</h2>
		</div>

		<div class="Header-notificaciones col-lg-2">
            <a href="#!"> 
                
                {% if notificaciones | length > 0 %}
					
					<i class="far fa-bell animate"></i>

				{% else %}
				    
				     <i class="far fa-envelope-open"></i>

                {% endif %}
                   
                Tienes 
                <span>
                    {{notificaciones}}
                </span> 
                Notificaciones 
            </a>
        </div>

		<div class="Header-user col-lg-3">
            <div class="Header-user-submenu">
                <ul>
                    <li>
                        <a href="#!">
                            <i class="far fa-user"></i>
                            Perfil
                        </a>
                    </li>
                    <li>
                        <a href="#!">
                            <i class="fas fa-sign-out-alt"></i>
                            Salir
                        </a>
                    </li>
                </ul>
            </div>
           
            <p >
	            <i class="fas fa-user"></i>
	            {{session.sUsuario}}
	            <i class="fas fa-caret-down"></i>
        	</p>
        </div>


	</header>