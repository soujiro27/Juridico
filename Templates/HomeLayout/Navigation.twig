<nav class="Navigation">
	<ul class="Navigation-menu">
		<li class="Navigation-menu-item">
			<a href="/SIA">
				<div class="Navigation-menu-icon">
					<i class="fas fa-home"></i>
				</div>
				<span>Inicio</span>
			</a>
		</li>

		{% for modulo in home.modulos  %}
			{% if modulo.submenus | length > 0 %}
				<li class="Navigation-menu-item">
					<div class="Navigation-menu-item-container">
						
						<div class="Navigation-menu-icon">
							<i class="{{ modulo.icon }}"></i>
						</div>
						<span>{{ modulo.nombre }}</span>
						<div class="Navigation-menu-arrow">
							<i class="fas fa-angle-right"></i>
						</div>
					</div>
					
					<ul class="Navigation-submenu">
						{% for item in modulo.submenus %}
							<li class="Navigation-submenu-item">
								<a href="{{ item.liga }}">
									<i class="{{ item.icono }}"></i>
									<span>{{ item.nombre }}</span>
									
								</a>
							</li>
						{% endfor %}
					</ul>
				</li>
			{% endif %}
		{% endfor %}

		<li class="Navigation-menu-item">
			<a href="#!">
				<div class="Navigation-menu-icon">
					<i class="fas fa-sign-out-alt"></i>
				</div>
				<span>Exit</span>
			</a>
		</li>


	</ul>
</nav>