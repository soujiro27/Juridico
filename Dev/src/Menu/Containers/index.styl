aside
    padding 0 !important
    background: url('./../../../Assets/images/back.png')
    ul.Menu
        list-style none
        padding 0
        border thin solid rgba(0,0,0,.1)
        li.Menu-item
            padding 10px 0px 10px 20px
            background: -webkit-linear-gradient(top, #f9f9f9, #f2f2f2)
            border-bottom rgb(204,204,204)
            &:hover
                background: -webkit-linear-gradient(top, #800000 , #d38483 );
            .Menu-item-container
                display flex
                align-items: center
                align-content: center
                padding-bottom 10px
                
                p
                    margin 0
            .Menu-item-icon
                width: 38px
                height 38px
                border-radius: 50%
                background: #eeeeee
                color #888888
                text-align: center
                border thin solid #ccc
                margin-right: 10px
            svg
                margin-top 9px
        a,p
            text-decoration: none
            color #888888
        ul.Menu-sub
            list-style none
            padding 0
            font-size: 12px !important
            li
                padding 10px 0px 10px 20px
                border-bottom thin solid rgb(204,204,204)
                &:hover
                    background: #eee
                a
                    display flex
                    align-items: center
                    p
                        margin 0 0 0 10px
                    svg
                        margin 0

